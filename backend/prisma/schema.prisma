  @@index([code])
}

model log_statistics {
  id       Int      @id @default(autoincrement())
  date     DateTime
  hour     Int?
  category String
  source   String
  count    Int      @default(0)
  level    LogLevel

  @@unique([date, hour, level, category, source])
  @@index([date(sort: Desc)])
}

model alert_rules {
