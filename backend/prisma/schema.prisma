model features {
  id                             Int                              @id @default(autoincrement())
  code                           String                           @unique
  name                           String
  description                    String?
  category                       String
  parentId                       Int?
  path                           String?
  urlPattern                     String?
  apiPattern                     String?
  icon                           String?
